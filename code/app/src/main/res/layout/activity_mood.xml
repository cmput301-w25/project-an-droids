<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Label for Emotional State -->
    <TextView
        android:id="@+id/emotionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emotional State:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <!-- Spinner (Dropdown) for Emotions -->
    <Spinner
        android:id="@+id/emotionSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintStart_toEndOf="@id/emotionLabel"
        app:layout_constraintTop_toTopOf="@id/emotionLabel"
        app:layout_constraintBottom_toBottomOf="@id/emotionLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label for Date Input -->
    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date (DD-MM-YYYY):"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/emotionSpinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <!-- Date Input Fields in Horizontal Layout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <!-- Day Input -->
        <EditText
            android:id="@+id/inputDay"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="DD"
            android:inputType="number"
            android:maxLength="2"
            android:background="@android:drawable/editbox_background" />

        <!-- Month Input -->
        <EditText
            android:id="@+id/inputMonth"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="MM"
            android:inputType="number"
            android:maxLength="2"
            android:layout_marginStart="10dp"
            android:background="@android:drawable/editbox_background" />

        <!-- Year Input -->
        <EditText
            android:id="@+id/inputYear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="YYYY"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginStart="10dp"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>

    <!-- Save Button (Fixed at the Bottom) -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
